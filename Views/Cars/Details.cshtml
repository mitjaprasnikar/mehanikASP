@model MehanikASP.Models.Car


@{
    ViewData["Title"] = "O vozilu";
}



<div>
    <h3>@Html.DisplayFor(model => model.Znamka) - @Html.DisplayFor(model => model.Model)</h3>
    <h5><a href="/Customers/Details/@Model.StrankaId">@Html.DisplayFor(model => model.Stranka.Ime) - @Html.DisplayFor(model => model.Stranka.Naslov)</a> - <a href="tel:@Model.Stranka.Telefon"> @Html.DisplayFor(model => model.Stranka.Telefon)</a></h5>
    
    
    
    <hr />

    

    <dl class="row" style="float:left; width:50%;">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Znamka)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Znamka)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Letnik)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Letnik)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VIN)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VIN)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.kW)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.kW)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipMotorja)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipMotorja)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RegOzn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegOzn)
        </dd>
        
    </dl>


    <table class="table">
  <thead>
    <tr>
      <th scope="col">Datum</th>
      <th scope="col">Kilometri</th>
      <th scope="col">Oljni Filter</th>
      <th scope="col">Zračni Filter</th>
      <th scope="col">Filter Goriva</th>
      <th scope="col">Filter Kabine</th>
      <th scope="col">Zobati Jermen</th>
      <th scope="col">Mikro Jermen</th>
      <th scope="col">Opombe</th>
    </tr>
  </thead>
  

        @foreach (var item in Model.Servisi)
        {
            <tbody>
                <tr>
      <th scope="row"><a href="/Services/Details/@item.Id">  @Html.ValueFor(m => item.Datum,"{0:dd/MM/yyyy}")</a></th>
      <td>@item.Kilometri</td>
                    <td> @if(item.OljniFilter)
                {<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="Green" class="bi bi-check-square-fill" style="display:block; margin:auto;" viewBox="0 0 16 16"><path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm10.03 4.97a.75.75 0 0 1 .011 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.75.75 0 0 1 1.08-.022z"/></svg>

                        }
                    </td>
                    
      <td>@if(item.ZracniFilter)
                {<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="Green" class="bi bi-check-square-fill" style="display:block; margin:auto;" viewBox="0 0 16 16"><path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm10.03 4.97a.75.75 0 0 1 .011 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.75.75 0 0 1 1.08-.022z"/></svg>

                        } </td>
      <td>@if(item.FilterGoriva)
                {<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="Green" class="bi bi-check-square-fill"  style="display:block; margin:auto;" viewBox="0 0 16 16"><path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm10.03 4.97a.75.75 0 0 1 .011 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.75.75 0 0 1 1.08-.022z"/></svg>

                        }</td>
      <td>@if(item.FilterKabine)
                {<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="Green" class="bi bi-check-square-fill" style="display:block; margin:auto;" viewBox="0 0 16 16"><path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm10.03 4.97a.75.75 0 0 1 .011 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.75.75 0 0 1 1.08-.022z"/></svg>

                        }</td>
      <td>@if(item.ZobatiJermen)
                {<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="Green" class="bi bi-check-square-fill" style="display:block; margin:auto;" viewBox="0 0 16 16"><path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm10.03 4.97a.75.75 0 0 1 .011 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.75.75 0 0 1 1.08-.022z"/></svg>

                        }</td>
      <td>@if(item.MikroJermen)
                {<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="Green" class="bi bi-check-square-fill" style="display:block; margin:auto;" viewBox="0 0 16 16"><path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm10.03 4.97a.75.75 0 0 1 .011 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.75.75 0 0 1 1.08-.022z"/></svg>

                        }</td>
      <td>@item.Opombe</td>
    </tr>
    
  </tbody>
    
        

    
}
</table>

</div>

<div style="clear:both;">
    <a asp-action="AddServiceToCar" asp-route-id="@Model.Id">Dodaj Servis</a> |
    <a asp-action="Edit" asp-route-id="@Model.Id">Uredi Vozilo</a> |
    <a asp-action="Delete" asp-route-id="@Model.Id" style="color:red;">Izbriši vozilo</a> |
    <a asp-action="Index">Nazaj</a>
</div>
