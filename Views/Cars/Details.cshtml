@model MehanikASP.Models.Car


@{
    ViewData["Title"] = "Details";
}



<div>
    <h3>@Html.DisplayFor(model => model.Stranka.Ime) - @Html.DisplayFor(model => model.Stranka.Naslov) - @Html.DisplayFor(model => model.Stranka.Telefon)</h3>
    <h4>@Html.DisplayFor(model => model.Znamka) - @Html.DisplayFor(model => model.Model)</h4>
    
    @Model.Servisi.First().Datum
    @Model.Servisi.Count()
    <hr />

    

    <dl class="row" style="float:left; width:50%;">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Znamka)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Znamka)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Letnik)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Letnik)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VIN)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VIN)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.kW)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.kW)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipMotorja)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipMotorja)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RegOzn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegOzn)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Stranka)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stranka.Id)
        </dd>
    </dl>


    <table class="table">
  <thead>
    <tr>
      <th scope="col">Datum</th>
      <th scope="col">Kilometri</th>
      <th scope="col">Oljni Filter</th>
      <th scope="col">Zračni Filter</th>
      <th scope="col">Filter Goriva</th>
      <th scope="col">Filter Kabine</th>
      <th scope="col">Opombe</th>
    </tr>
  </thead>
  

        @foreach (var item in Model.Servisi)
        {
            <tbody>
                <tr>
      <th scope="row">@item.Datum</th>
      <td>@item.Kilometri</td>
      <td> @Html.CheckBoxFor(x => item.OljniFilter,new {@disabled = "disabled"}) </td>
      <td>@Html.CheckBoxFor(x => item.ZracniFilter,new {@disabled = "disabled"}) </td>
      <td>@Html.CheckBoxFor(x => item.FilterGoriva,new {@disabled = "disabled"})</td>
      <td>@Html.CheckBoxFor(x => item.FilterKabine,new {@disabled = "disabled"})</td>
      <td>@item.Opombe</td>
    </tr>
    
  </tbody>
    
        

    
}
</table>

</div>

<div style="clear:both;">
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
