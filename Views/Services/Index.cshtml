@model IEnumerable<MehanikASP.Models.Service>

@{
    ViewData["Title"] = "Vsi servisi";
}

<h1>Vsi servisi</h1>

<p>
    <a asp-action="Create">Dodaj nov servis</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Datum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kilometri)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OljniFilter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZracniFilter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FilterGoriva)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FilterKabine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZobatiJermen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MikroJermen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opombe)
            </th>
            <th>
               @Html.DisplayNameFor(model => model.Car.Znamka)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
              <a href="/Services/Details/@item.Id">  @Html.ValueFor(m => item.Datum,"{0:dd/MM/yyyy}")</a>
            </td>
            <td>
                
                @Html.DisplayFor(modelItem => item.Kilometri)
            </td>
            <td>
                @if(item.OljniFilter)
                {<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="Green" class="bi bi-check-square-fill" style="display:block; margin:auto;" viewBox="0 0 16 16"><path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm10.03 4.97a.75.75 0 0 1 .011 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.75.75 0 0 1 1.08-.022z"/></svg>

                        }
            </td>
            <td>
                @if(item.ZracniFilter)
                {<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="Green" class="bi bi-check-square-fill" style="display:block; margin:auto;" viewBox="0 0 16 16"><path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm10.03 4.97a.75.75 0 0 1 .011 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.75.75 0 0 1 1.08-.022z"/></svg>

                        }
            </td>
            <td>
                @if(item.FilterGoriva)
                {<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="Green" class="bi bi-check-square-fill" style="display:block; margin:auto;" viewBox="0 0 16 16"><path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm10.03 4.97a.75.75 0 0 1 .011 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.75.75 0 0 1 1.08-.022z"/></svg>

                        }
            </td>
            <td>
                @if(item.FilterKabine)
                {<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="Green" class="bi bi-check-square-fill" style="display:block; margin:auto;" viewBox="0 0 16 16"><path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm10.03 4.97a.75.75 0 0 1 .011 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.75.75 0 0 1 1.08-.022z"/></svg>

                        }
            </td>
            <td>
                @if(item.ZobatiJermen)
                {<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="Green" class="bi bi-check-square-fill" style="display:block; margin:auto;" viewBox="0 0 16 16"><path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm10.03 4.97a.75.75 0 0 1 .011 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.75.75 0 0 1 1.08-.022z"/></svg>

                        }
            </td>
            <td>
                @if(item.MikroJermen)
                {<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="Green" class="bi bi-check-square-fill" style="display:block; margin:auto;" viewBox="0 0 16 16"><path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm10.03 4.97a.75.75 0 0 1 .011 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.75.75 0 0 1 1.08-.022z"/></svg>

                        }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opombe)
            </td>
            <td>
                <a href="/Cars/Details/@item.CarId">
                @Html.DisplayFor(modelItem => item.Car.Znamka) @Html.DisplayFor(modelItem => item.Car.Model)</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Uredi</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Podrobnosti</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" style="color:red;">Izbriši</a>
            </td>
        </tr>
}
    </tbody>
</table>
