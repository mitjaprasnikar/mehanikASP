@model IEnumerable<MehanikASP.Models.Service>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Datum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kilometri)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OljniFilter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZracniFilter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FilterGoriva)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FilterKabine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opombe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Datum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kilometri)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OljniFilter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZracniFilter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FilterGoriva)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FilterKabine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opombe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Car.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
